@page
@model CRUDUsingAPI.Pages.CRUD_Operation.DeleteUserModel

<span class="text-primary">
    <a href="/Index" class=" text-decoration-none">Home</a>
    &nbsp;&nbsp;&nbsp;>>&nbsp;&nbsp;&nbsp;
    <a href="/CRUD_Operation/GetAll" class=" text-decoration-none">User</a>
    &nbsp;&nbsp;&nbsp;>>&nbsp;&nbsp;&nbsp;
    <a href="/CRUD_Operation/DeleteUser" class=" text-decoration-none">Delete User</a>
    &nbsp;&nbsp;&nbsp;>>&nbsp;&nbsp;&nbsp;
</span>

<div class="container">
    <form method="post">
        <div class="h3 mt-4 mb-3">
            Delete User
        </div>
        <div class="form-control">
           
                <div class="col-12 row mt-2">
                <input type="hidden" asp-for="@Model.UserCRUD.id" />
                <input type="hidden" asp-for="@Model.UserCRUD.emailAddress" />
                    <div class="col-4">
                    <label asp-for="@Model.UserCRUD.userName"></label>
                    <input asp-for="@Model.UserCRUD.userName" class="form-control" type="text" disabled />
                    </div>
                    <div class="col-4">
                    <label asp-for="@Model.UserCRUD.emailAddress"></label>
                    <input asp-for="@Model.UserCRUD.emailAddress" class="form-control" type="text" disabled/>
                    </div>
                    <div class="col-4">
                    <label asp-for="@Model.UserCRUD.contactNo"></label>
                    <input asp-for="@Model.UserCRUD.contactNo" class="form-control" type="text" disabled />
                    </div>
                </div>
            
           
            <div class="mt-3 mb-2">
                <center>
                    <button type="submit" class="btn btn-danger" >Delete</button>
                    <a class="btn btn-secondary ms-2" asp-page="/CRUD_Operation/GetAll">Back</a>
                </center>
            </div>
        </div>
    </form>
</div>